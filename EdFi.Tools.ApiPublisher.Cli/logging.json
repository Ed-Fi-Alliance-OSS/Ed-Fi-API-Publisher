{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo:Console": {
        "Name": "Console",
      "Args": {
        "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss,fff}] [{Level:u3}] [{ThreadId:00}] {SourceContext} - {Message} {Exception} {NewLine}",
        "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
      }
    },
    "WriteTo:File": {
        "Name": "File",
      "Args": {
        "path": "C:\\ProgramData\\Ed-Fi-API-Publisher\\Ed-Fi-API-PublisherSerilog.log",
        "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss,fff}] [{Level:u3}] [{ThreadId:00}] {SourceContext} - {Message} {Exception} {NewLine}"
      }
    }
  }
}
